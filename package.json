{
  "name": "fullstack-challenge",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:client": "pnpm --filter client dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:client\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^9.34.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "api//*.{ts,tsx,js,jsx}": [
      "pnpm --filter api exec eslint --fix",
      "pnpm --filter api exec prettier --write"
    ],
    "client//.{ts,tsx,js,jsx}": [
      "pnpm --filter client exec eslint --fix",
      "pnpm --filter client exec prettier --write"
    ],
    "api/**/.{json,css,md}": "pnpm --filter api exec prettier --write",
    "client/**/*.{json,css,md}": "pnpm --filter client exec prettier --write"
  }
}
